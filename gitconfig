[merge]
  tool = diff
[push]
  default = simple
[core]
  autocrlf = input

[color]
  diff = auto
  status = auto
  branch = auto

[alias]
  br = branch
  co = checkout
  cm = commit
  di = diff
  showw = show --word-diff
  diffw = diff --word-diff
  diffc = diff --cached
  st = status
  s  = status --short
  sl = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --all --since='90 days ago'
  logs = log --stat
